@model IEnumerable<Cyber_Kitchen.Models.MealModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-12">
    <ol class="breadcrumb page-breadcrumb pull-right"></ol>
</div>
<h1 class="alert-info">DAILY MEAL</h1>
<div class="btn-group">
  <a href="@Url.Action("CreateMeal", "Meal")" class="btn btn-info "><i class="fa fa-plus"></i>Add New </a>
    
</div>
@*<table class="table table-striped table-bordered table-hover @*table-checkable order-column valign-middle" id="example4>*@
<table class="table table-striped table-bordered table-hover  order-column valign-middle" id="example4">
    <thead>
        <tr>
                <th> s/n </th>           
                <th> Staff NO. </th>
                <th> Status </th>
                <th> Day </th>
                <th> Date </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
            {
            <tr class="gradeX odd" role="row" id="row-@item.MealId">
                @*@if(User.IsInRole("Admin"))
                    {
                        <td class="left"><input type="checkbox" id="checkedMe" data-id="@item.VoterId"></td>
                    }*@
                    <td class="left">@Html.DisplayFor(modelItem => item.MealId)</td>
                <td>@Html.DisplayFor(modelItem => item.StaffNo)</td>
                <td>@Html.DisplayFor(modelItem => item.Status)</td>
                <td>@item.Date.ToString("dddd")</td>
                <td>@String.Format("{0:d}", item.Date)</td>                     
                <td>
                    @*@if (User.IsInRole("Admin"))
                    {*@
                        <a href="/Meal/EditMeal?id=@item.MealId" class="btn btn-primary btn-xs">
                            <i class="fa fa-pencil"></i>
                        </a>
                        <a href="/Meal/DeleteMeal?id=@item.MealId" class="btn btn-danger btn-xs" id="deleteaction" data-id="@item.MealId" data-name="@item.StaffNo">
                            <i class="fa fa-trash-o "></i>
                        </a>
                    @*}*@


                </td>
            </tr>

        }

    </tbody>
</table>